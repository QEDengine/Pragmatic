{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		},
		{
			"name": "Pragmatic",
			"type": "python",
			"request": "launch",
			"module": "pragmatic",
			"args": ["build", "tests/basic/basic.cpp"]
		},
		{
			"name": "Pragmatic CLI",
			"type": "python",
			"request": "launch",
			"module": "pragmatic",
			"args": ["${input:args}"]
		},
	],
	"inputs": [
		{
		  "id": "args",
		  "type": "promptString",
		  "description": "Argments"
		}
	  ]
}
